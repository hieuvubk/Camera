<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg"
    tools:context=".MainActivity">


    <TextureView
        android:id="@+id/textureView"
        android:layout_width="300dp"
        android:layout_height="380dp"

        android:layout_marginStart="3dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="161dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCapture"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="62dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/film_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textureView" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/flash"
        android:layout_width="39dp"
        android:layout_height="30dp"
        android:layout_marginTop="14dp"
        android:text="@string/flash"
        app:layout_constraintStart_toStartOf="@+id/iso"
        app:layout_constraintTop_toBottomOf="@+id/iso"
        tools:ignore="MissingConstraints"
        />

    <SeekBar
        android:id="@+id/zoom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="72dp" />

    <TextView
        android:id="@+id/zoom_values"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/zoom_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="x1" />

    <SeekBar
        android:id="@+id/focus_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zoom_bar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/focus_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="0m"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/focus_bar"
        app:layout_constraintEnd_toEndOf="@+id/focus_bar"
        app:layout_constraintStart_toStartOf="@+id/focus_bar"
        tools:ignore="MissingConstraints" />

    <SeekBar
        android:id="@+id/sensitive_bar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"
        app:layout_constraintBottom_toTopOf="@+id/focus_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zoom_bar" />

    <ImageView
        android:id="@+id/iso"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toEndOf="@+id/textureView"
        app:layout_constraintTop_toTopOf="@+id/textureView"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/flash_inf"
        android:layout_width="39dp"
        android:layout_height="39dp"
        app:layout_constraintBottom_toTopOf="@+id/iso"
        app:layout_constraintEnd_toEndOf="@+id/iso"
        app:srcCompat="@drawable/iso200" />

</androidx.constraintlayout.widget.ConstraintLayout>